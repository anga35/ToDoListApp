<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingVertical="10dp">


    <TextView
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="Add Task"
        android:layout_gravity="center_horizontal"
        android:fontFamily="@font/poppins"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:gravity="center"
        android:layout_marginTop="5dp"
        ></TextView>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_add_task"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        ></androidx.recyclerview.widget.RecyclerView>


    <EditText
        android:id="@+id/et_task_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginStart="10dp"

        android:layout_marginEnd="10dp"
        android:drawableTint="@color/black"
        android:fontFamily="@font/poppins"
        android:hint="Task name"
        android:letterSpacing="0.06"
        android:paddingVertical="13dp"
        android:paddingStart="20dp"
        android:textColorHint="#B3000000"
        android:maxLength="30"
        android:textCursorDrawable="@drawable/cursor_drawable"
        android:textSize="12sp"
        android:layout_toLeftOf="@id/imb_calendar"
        android:layout_alignParentStart="true"
        ></EditText>



<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    >

    <ImageButton
        android:id="@+id/imb_calendar"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:background="@drawable/ic_outline_calendar_month_24"

        android:layout_marginLeft="20dp"

        ></ImageButton>


    <TextView
        android:id="@+id/tv_selected_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins"
        android:letterSpacing="0.06"
        android:text="Select date"
        android:textColor="@color/black"
        android:textSize="12sp"
        android:layout_marginTop="2dp"
        android:layout_marginLeft="20dp"
></TextView>



</LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        >

        <ImageButton
            android:id="@+id/imb_time"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/ic_baseline_access_time_24"

            android:layout_marginLeft="20dp"

            ></ImageButton>


        <TextView
            android:id="@+id/tv_selected_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins"
            android:letterSpacing="0.06"
            android:text="Select time"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:layout_marginTop="2dp"
            android:layout_marginLeft="20dp"
            ></TextView>



    </LinearLayout>

    <ImageButton
        android:id="@+id/imb_add_to_tasks"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:background="@drawable/plus_circle"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="5dp"
        ></ImageButton>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="end"
        android:layout_marginTop="5dp"
        >
        <TextView
            android:id="@+id/btn_cancel_dialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins"
            android:letterSpacing="0.06"
            android:text="cancel"
            android:textColor="#F4C27F"
            android:textSize="12sp"
            android:textAllCaps="true"
            android:layout_marginRight="30dp"
            android:layout_marginTop="2dp"
            android:padding="10dp"
            android:foreground="?attr/selectableItemBackground"
            ></TextView>

        <TextView
            android:id="@+id/btn_done_dialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins"
            android:letterSpacing="0.06"
            android:text="Done"
            android:textColor="#F4C27F"
            android:textSize="12sp"
            android:textAllCaps="true"
            android:layout_marginRight="30dp"
            android:layout_marginTop="2dp"
            android:padding="10dp"
            android:foreground="?attr/selectableItemBackground"
            ></TextView>



    </LinearLayout>




</LinearLayout>